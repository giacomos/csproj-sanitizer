{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6", "es2015", "dom"],
      "declaration": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
      },
      "types": [
        "node",
        "jest"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "typings/**"
    ]
  }
